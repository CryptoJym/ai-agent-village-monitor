{
  "buildCommand": "pnpm install --frozen-lockfile && pnpm -C packages/frontend build",
  "outputDirectory": "packages/frontend/dist",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "${env.BACKEND_URL}/api/$1"
    },
    {
      "source": "/auth/(.*)",
      "destination": "${env.BACKEND_URL}/auth/$1"
    },
    {
      "source": "/socket.io/:match*",
      "destination": "${env.BACKEND_URL}/socket.io/:match*"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
