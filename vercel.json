{
  "buildCommand": "pnpm install --frozen-lockfile && pnpm -C packages/frontend build",
  "outputDirectory": "packages/frontend/dist",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://backend-production-6a6e4.up.railway.app/api/$1"
    },
    {
      "source": "/auth/(.*)",
      "destination": "https://backend-production-6a6e4.up.railway.app/auth/$1"
    },
    {
      "source": "/socket.io/:match*",
      "destination": "https://backend-production-6a6e4.up.railway.app/socket.io/:match*"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
