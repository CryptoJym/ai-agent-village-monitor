{
  "name": "ai-agent-village-monitor",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:strict": "eslint packages/frontend/src packages/server/src packages/shared --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "typecheck": "pnpm -r typecheck",
    "preview": "pnpm -C packages/frontend preview -- --port 4173",
    "format": "prettier --write .",
    "prepare": "husky",
    "prisma:generate": "pnpm -C packages/server prisma:generate",
    "prisma:migrate:dev": "pnpm -C packages/server db:migrate",
    "db:migrate": "pnpm -C packages/server db:migrate",
    "db:push": "pnpm -C packages/server db:push",
    "db:reset": "pnpm -C packages/server db:reset",
    "db:studio": "pnpm -C packages/server prisma:studio",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:unit": "pnpm -r --workspace-concurrency=1 test:unit",
    "test:integration": "pnpm -C packages/server test:integration",
    "test:coverage": "pnpm -r test:coverage",
    "test:ci": "pnpm -r --workspace-concurrency=1 test:ci",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:accessibility": "playwright test --grep @a11y",
    "test:visual": "playwright test --grep @visual",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:preview": "PW_WEB_SERVER='node scripts/preview-and-wait.mjs' PW_BASE_URL='http://localhost:4173' playwright test --reporter=dot",
    "lighthouse": "lhci autorun",
    "lighthouse:mobile": "lhci autorun --config=lighthouserc.mobile.js",
    "bootstrap:village": "node scripts/bootstrap-village.mjs",
    "pixellab:tiles": "node scripts/generate-tiles.mjs",
    "omnara:auto": "scripts/omnara-auto.sh",
    "oa": "scripts/omnara-auto.sh",
    "omnara:hard": "scripts/omnara-hard.sh",
    "oh": "scripts/omnara-hard.sh",
    "omnara:launch:execution-plane": "bash scripts/omnara/launch-execution-plane.sh",
    "omnara:launch:prd-eval:gemini-task9": "bash scripts/omnara/launch-prd-eval-gemini-task9.sh"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.48.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "adm-zip": "^0.5.16",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "mcp-client": "^1.13.1",
    "pidusage": "^4.0.1",
    "prettier": "^3.6.2",
    "prisma": "^6.16.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "zod": "^3.23.8"
  }
}
