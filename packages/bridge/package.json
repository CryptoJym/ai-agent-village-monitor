{
  "name": "@ai-agent-village-monitor/bridge",
  "version": "0.1.0",
  "description": "CLI bridge to connect terminal AI agents (Claude Code, Aider, Codex) to the Village Monitor visualization",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "village-bridge": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "socket.io-client": "^4.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.5",
    "@types/node": "^22.15.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "ai-agent",
    "claude-code",
    "aider",
    "codex",
    "village-monitor",
    "terminal-bridge"
  ],
  "license": "MIT"
}
