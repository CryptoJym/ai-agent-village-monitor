GITHUB_OAUTH_CLIENT_SECRET="your_github_oauth_secret" # Required for GitHub OAuth login
JWT_SECRET="supersecretjwt"                           # Required for JWT signing
PUBLIC_SERVER_URL="http://localhost:3000"             # Base URL for server (used to derive OAuth callback)
PUBLIC_APP_URL="http://localhost:5173"                # Frontend base URL after login redirect
OAUTH_SCOPES="read:user read:org workflow"            # Default GitHub OAuth scopes (add 'repo' if needed)
OAUTH_REDIRECT_URI=""                                  # Optional: Explicit callback URL override
COOKIE_DOMAIN=""                                       # Optional: Set for cross-subdomain cookies in prod
KMS_KEY_ID=""                                          # Optional: Key identifier for envelope encryption 

# OAuth/Web App URLs
# Base public URL where the server is reachable (used to derive default callback)
PUBLIC_SERVER_URL="http://localhost:3000"
# Public URL for the frontend app to redirect to after login
PUBLIC_APP_URL="http://localhost:5173"
# Explicit OAuth callback URI; in production, set to "https://<host>/auth/github/callback"
# If not set, it is derived from PUBLIC_SERVER_URL
OAUTH_REDIRECT_URI=""
# Space-delimited list of scopes. Add 'repo' only if private repo access is needed.
OAUTH_SCOPES="read:user read:org workflow"
# Optional cookie domain for production (e.g., ".example.com")
COOKIE_DOMAIN=""

# Optional KMS key identifier for secrets-at-rest (future use)
KMS_KEY_ID=""

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_agent_village?schema=public" # Used by Prisma

# MCP Agent Controller (optional HTTP adapter)
MCP_HTTP_ENDPOINT="http://localhost:4000"            # Optional: MCP controller base URL for agent start/stop/command
MCP_HTTP_API_KEY="your_mcp_api_key_here"             # Optional: Bearer token for MCP controller
